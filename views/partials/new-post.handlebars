{{!-- <div class="card-body"> --}}
	<div class="post-card">
		<h5 class="card">New post from {{loggedInUser.first_name}} {{loggedInUser.last_name}} </h5>
		<form id="new-post-form" data-id="{{loggedInUser.id}}">
			<hr />
			<br>
			<div>
				<h3 id="error-message" class="text-red"></h3>
			</div>
			<div class="row">
				<label for="post-title" class="form-label">Title</label>
				<input type="text" class="form-control" id="post-title">
			</div>
			<div class="row">
				<label for="post-text" class="form-label">Text</label>
				<textarea cols="10" rows="15" class="form-control" id="post-text"></textarea>
			</div>
			<br>
			<hr />
			<button type="submit" class="btn btn-form btn-center">Post</button>
		</form>
	</div>

	<script src="/js/newpost.js"></script>